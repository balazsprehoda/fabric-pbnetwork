    ports:
      - "8054:7054"
    command: sh -c 'fabric-ca-server start -b admin:adminpw'
    volumes:
      - ./crypto-config/peerOrganizations/org2.pbnetwork.com/ca/:/etc/hyperledger/fabric-ca-server-config
